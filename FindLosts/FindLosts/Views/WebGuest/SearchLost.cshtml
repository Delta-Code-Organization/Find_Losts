                                <th style="width: 25%; text-align: center;">اسم المفقود</th>
                            </tr>
                        </thead>
                        <tbody class="no-border-x" id="result">
                              @{
                                foreach(LostsEntries l in ViewBag.losts)
                                {
                            <tr style="text-align: center;">
                                <td style="width: 16.6%;">@((Enum.GetName(typeof(LostEntriesStatus),l.Status)).ShowStatus())</td>
                                <td style="width: 16.6%;">@l.LostPlace</td>
                                <td>@l.Description</td>
                                <td class="text-right">@l.Name</td>
                            </tr>
                              }
                              }

@{
    ViewBag.Title = "SearchLost";
     Layout = "~/Views/shared/MasterPage.cshtml";
}
@using FindLosts.Models;
<script src="~/scripts/WebGuestSearch.js"></script>
<div class="row">
    <div class="col-md-9">
        <div class="block-flat">
            <h3 class="spacer-bottom-sm ArabicAlign">بيانات المفقودات</h3>
            <div class="block-flat no-padding">
                <div class="content">
                    <table class="no-border blue">

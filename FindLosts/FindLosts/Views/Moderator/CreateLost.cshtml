@{
    ViewBag.Title = "CreateLost";
    Layout = "~/Views/shared/MasterPage.cshtml";
}
<script src="~/scripts/CreateLost.js"></script>
<div class="row">
    <div class="col-md-12">
        <div class="block-flat">
            <div class="header">
                <h3 class="ArabicAlign">اضافة مفقود جديد</h3>
            </div>
            <div class="content">
                <form id="SubCreate" class="form-horizontal group-border-dashed" novalidate="" parsley-validate="" action="#" style="border-radius: 0px;">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="block-flat" style="border: none;">
                            <div class="content">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align:center;">تاريخ الفقد</label>
                                    <div class="col-sm-6 Arabic">
                                        <input style="direction:ltr;" data-mask="datetime" id="lostdate" class="form-control datetime parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال التاريخ" size="16" value="" type="text">
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">مكان الفقد</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="lostplace" name="nick" parsley-trigger="change" required="" parsley-error-message="يجب ادخال المكان" type="text" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="block-flat" style="border: none;">
                            <div class="content">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">اسم المفقود</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="lostname" name="nick" parsley-trigger="change" required="" parsley-error-message="يجب ادخال الاسم" type="text" />
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">الوصف</label>
                                    <div class="col-sm-6 Arabic">
                                        <textarea  class="form-control" parsley-validated parsley-error" id="lostdescription" parsley-trigger="change" required="" parsley-error-message="يجب ادخال الوصف"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">رقم هاتف المالك</label>
                                    <div class="col-sm-6 Arabic">
                                        <input id="PhoneMask" data-mask="mobile" class="form-control parsley-validated parsley-error" placeholder="999-9999-9999" parsley-trigger="change" required="" parsley-error-message="يجب ادخال رقم الهاتف" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">اسم المالك</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="ownername" name="nick" parsley-trigger="change" required="" parsley-error-message="يجب ادخال الاسم" type="text" />
                                    </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="margin-top:15px;">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="resultmsg" style="text-align:center;color:blue;"><label id="result"></label></div>
                            <button type="submit" class="btn btn-primary" id="save">حفظ</button>
                            <button type="button" onclick="Cancel()" class="btn btn-default">الغاء</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/shared/MasterPage.cshtml";
}
@using FindLosts.Models;
<script src="~/scripts/UpdateAdmin.js"></script>
<div class="row">
    <div class="col-md-12">
        <div class="block-flat">
            <div class="header">
                <h3 class="ArabicAlign">تعديل المدير</h3>
            </div>
            <div class="content">
                <form id="SubCreate" class="form-horizontal group-border-dashed" novalidate="" parsley-validate="" action="#" style="border-radius: 0px;">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="block-flat" style="border: none;">
                            <div class="content">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">الرقم السري</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="updatepasstxt" name="nick" parsley-trigger="change" required="" parsley-error-message="يجب ادخال الرقم السري" type="text" value="@ViewBag.moderator.Password"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="block-flat" style="border: none;">
                            <div class="content">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">الاسم</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="updatenametxt" name="nick" parsley-trigger="change" required="" parsley-error-message="يجب ادخال الاسم" type="text" value="@ViewBag.moderator.UserName"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary" id="save">حفظ</button>
                            <button type="button" onclick="Cancel(@ViewBag.moderator.ID)" class="btn btn-default">الغاء</button>
                            <div class="resultmsg" style="text-align:center;color:blue;"><label id="result"></label></div>
                        </div>
                        <div style="height:350px;">
                    </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>

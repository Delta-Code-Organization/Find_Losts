@{
    ViewBag.Title = "SearchLosts";
    Layout = "~/Views/shared/MasterPage.cshtml";
}
@using FindLosts.Models;
<div class="row">
    <div class="col-md-9">
        <div class="block-flat">
            <h3 class="spacer-bottom-sm ArabicAlign">بيانات المفقودات</h3>
            <div class="block-flat no-padding">
                <div class="content">
                    <table class="no-border blue">
                        <thead class="no-border">
                            <tr>
                                @*<th style="width: 16.6%; text-align: center;"></th>*@
                                <th style="width: 14%; text-align: center;">مكان الفقد</th>
                                <th style="width: 14%; text-align: center;">تاريخ الفقد</th>
                                <th style="width: 14%; text-align: center;">هاتف المالك</th>
                                <th style="width: 14%; text-align: center;">إسم المالك</th>
                                <th style="width: 14%; text-align: center;">الكود</th>
                                <th style="width: 14%; text-align: center;">الوصف</th>
                                <th style="width: 14%; text-align: center;">اسم المفقود</th>
                            </tr>
                        </thead>
                        <tbody class="no-border-x">
                            @{
                                foreach(LostsEntries l in ViewBag.losts)
                                {
                            <tr style="text-align: center;">
                                <td style="width: 16.6%;">@l.LostPlace</td>
                                   @* <button data-toggle="modal" data-target="#mod-info" type="button" class="btn btn-primary"><i class="fa fa-edit "></i>تعديل</button></td>*@

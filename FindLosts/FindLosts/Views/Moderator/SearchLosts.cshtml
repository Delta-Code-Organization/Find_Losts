                                <td>@l.OwnerPhone</td>
                                <td>@l.OwnerName</td>
                                <td>@l.Code</td>
                                <td>@l.Description</td>
                                <td class="text-right">@l.Name</td>
                            </tr>
                            @*<tr style="text-align: center;">
                                  <td style="width: 16.6%;">pl</td>
                                    <button data-toggle="modal" data-target="#mod-info" type="button" class="btn btn-primary"><i class="fa fa-edit "></i>تعديل</button></td>
                                <td style="width: 16.6%;">da</td>
                                <td>ph</td>
                                <td>na</td>
                                <td>cc</td>
                                <td>dd</td>
                                <td class="text-right">محمد</td>
                                
                            </tr>
                            <tr style="text-align: center;">
                                <td style="width: 16.6%;">pl</td>
                                    <button data-toggle="modal" data-target="#mod-info" type="button" class="btn btn-primary"><i class="fa fa-edit "></i>تعديل</button></td>
                                <td style="width: 16.6%;">da</td>
                                <td>ph</td>
                                <td>na</td>
                                <td>cc</td>
                                <td>dd</td>
                                <td class="text-right">محمد</td>
                            </tr>*@
                            }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="block-flat">
            <div class="header">
                <h3 class="ArabicAlign">البحث</h3>
            </div>
            <div class="content">
                <form class="form-horizontal group-border-dashed" novalidate="" parsley-validate="" action="#" style="border-radius: 0px;">
                    <div class="block-flat" style="border: none;">
                        <div class="content">
                            <div class="form-group">
                                <label class="col-sm-3 control-label Arabic" style="text-align: right; width: 100%;">اسم المفقود</label>
                                <div class="col-sm-12 Arabic">
                                    <input style="direction: ltr;" class="form-control" size="16" value="" type="text">
                                </div>
                            </div>
                             <div class="form-group">
                                <label class="col-sm-3 control-label Arabic" style="text-align: right; width: 100%;">الكود</label>
                                <div class="col-sm-12 Arabic">
                                    <input style="direction: ltr;" class="form-control" size="16" value="" type="text">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


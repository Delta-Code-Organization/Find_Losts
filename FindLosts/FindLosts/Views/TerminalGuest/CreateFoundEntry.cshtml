@{
    ViewBag.Title = "CreateFoundEntry";
    Layout = "~/Views/shared/MasterPage.cshtml";
}
@using FindLosts.Models;
<script src="~/scripts/CretaeFoundEntry.js"></script>
<div class="row">
    <div class="col-md-12">
        <div class="block-flat">
            <div class="header">
                <h3 style="text-align: right;">إدارة المفقودات</h3>
            </div>
           
            <div class="content" style="direction: rtl;">
                <div class="table-responsive">
                    <table class="table table-bordered" id="datatable">
                        <thead>
                            <tr style="direction: rtl;">
                                <th style="text-align: center;">اسم المفقود</th>
                                <th style="text-align: center;">الوصف</th>
                                  @*<th style="text-align: center;">الكود</th>
                                <th style="text-align: center;">اسم المالك</th>*@
                                  <th style="text-align: center;">رقم هاتف المالك</th>
                               @* <th style="text-align: center;">تاريخ الفقد</th>*@
                                  <th style="text-align: center;">مكان الفقد</th>
                                <th style="text-align: center;"></th>
                            </tr>
                        </thead>
                        <tbody>
                          @{
                              foreach (LostsEntries l in ViewBag.losts)
                              {
                                  if(@l.Status==0)
                                  {
                            <tr class="odd gradeX" id="@l.ID"> 
                                <td>@l.Name</td>
                                <td>@l.Description</td>
                                @*<td>@l.Code</td>
                                 <td>@l.OwnerName</td>*@
                                 <td>@l.OwnerPhone</td>
                                @* <td>@l.LostDate</td>*@
                                <td class="center">@l.LostPlace</td>
                                <td class="center">
                                    <div class="btn-group">
                                        <button class="btn btn-default btn-xs" type="button">Actions</button>
                                        <button data-toggle="dropdown" class="btn btn-xs btn-primary dropdown-toggle" type="button">
                                            <span class="caret"></span>
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <ul role="menu" class="dropdown-menu">
                                           
                                            <li>
                                                <a onclick="SetFoundEntry(@l.ID)" style="cursor:pointer">تم العثور عليها</a>
                                            </li>
                                           @* <li>
                                                <a id="hrefdelete" onclick="Delete(@l.ID)">Delete</a>
                                            </li>*@
                                           @* <li>
                                                <a href="#">New Card</a>
                                            </li>
                                            <li class="divider">
                                            </li>
                                            <li>
                                                <a onclick="">Remove</a>
                                            </li>*@
                                        </ul>
                                    </div>
                                </td>
                                
                            </tr>
                              }
                                 }
                                 }
                        </tbody>
                    </table>
                </div>
            </div>
             <div class="resultmsg" style="text-align:center;color:blue;"><label id="result"></label></div>
        </div>
    </div>
</div>          
<script type="text/javascript">
    $(document).ready(function () {
        App.init();
        App.dataTables();
    });

